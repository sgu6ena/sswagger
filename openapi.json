  "paths": {
    "/user/{id}": {
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Получение юзера по id",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Успешный запрос",
            "headers": {
					    "Access-Control-Allow-Origin": {
						    "type": "string"
					      }
              }
          },
          "401": {
            "description": "Необходимо авторизироваться",
            "headers": {
					    "Access-Control-Allow-Origin": {
						    "type": "string"
					}
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "responses": {
      "UnauthorizedError": {
        "description": "API key is missing or invalid",
        "headers": {
